<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--display snackbar above keyboard  | Hide Keyboard-->
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="BaseLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>


    // ------------------------------------- TextView ----------------------------------------------

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextAndroid</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">normal</item>
        <!--        <item name="android:lineSpacingExtra">6dp</item>-->

    </style>

    <style name="TextView.Colored" parent="TextView">
        <item name="android:textColor">@color/colorTextHeader</item>

    </style>


    <style name="TextView.Paragraph" parent="TextView">
        <item name="android:textStyle">bold</item>

    </style>


    <style name="TextView.ParagraphColored" parent="TextView.Paragraph">
        <item name="android:textColor">@color/colorTextHeader</item>

    </style>


    <style name="TextView.HeaderBold" parent="TextView.ParagraphColored">
        <item name="android:textSize">16sp</item>

    </style>


</resources>